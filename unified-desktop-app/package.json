{
  "name": "tigerex-desktop-unified",
  "version": "4.0.0",
  "description": "TigerEx Unified Desktop Application - Professional Cryptocurrency Trading Platform",
  "main": "unified_desktop_app.js",
  "homepage": "https://tigerex.com",
  "author": {
    "name": "TigerEx Team",
    "email": "support@tigerex.com",
    "url": "https://tigerex.com"
  },
  "license": "MIT",
  "keywords": [
    "cryptocurrency",
    "exchange",
    "trading",
    "bitcoin",
    "ethereum",
    "electron",
    "desktop",
    "finance",
    "blockchain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/meghlabd275-byte/TigerEx-.git"
  },
  "bugs": {
    "url": "https://github.com/meghlabd275-byte/TigerEx-/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently &quot;npm run start:web&quot; &quot;wait-on http://localhost:3000 && electron .&quot;",
    "start:web": "cd ../frontend && npm start",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "cd ../frontend && npm run build",
    "build:electron": "electron-builder",
    "build:all": "npm run build:web && npm run build:electron",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "dist:win": "electron-builder --win --publish=never",
    "dist:mac": "electron-builder --mac --publish=never",
    "dist:linux": "electron-builder --linux --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "clean": "rimraf dist build node_modules/.cache"
  },
  "build": {
    "appId": "com.tigerex.desktop.unified",
    "productName": "TigerEx Desktop",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "unified_desktop_app.js",
      "unified_preload.js",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "TigerEx",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Finance"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "jest": "^29.7.0",
    "electron-builder-squirrel-windows": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "ws": "^8.15.1",
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}