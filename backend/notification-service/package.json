{
  "name": "tigerex-notification-service",
  "version": "1.0.0",
  "description": "TigerEx Advanced Notification Service - Real-time notifications, alerts, and communication",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "docker:build": "docker build -t tigerex/notification-service .",
    "docker:run": "docker run -p 3001:3001 tigerex/notification-service"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "web-push": "^3.6.6",
    "firebase-admin": "^11.11.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "mongoose": "^8.0.3",
    "bull": "^4.12.2",
    "node-cron": "^3.0.3",
    "ws": "^8.14.2",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "axios": "^1.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "notifications",
    "real-time",
    "websocket",
    "push-notifications",
    "email",
    "sms",
    "alerts",
    "cryptocurrency",
    "trading",
    "microservice"
  ],
  "author": "TigerEx Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shahrukhahamed/TigerEx-hybrid-crypto-exchange-.git"
  },
  "bugs": {
    "url": "https://github.com/Shahrukhahamed/TigerEx-hybrid-crypto-exchange-/issues"
  },
  "homepage": "https://tigerex.com",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "consistent-return": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true
  }
}
