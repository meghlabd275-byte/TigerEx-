{
  "name": "tigerex-desktop",
  "version": "3.0.0",
  "description": "TigerEx Desktop App - Professional Crypto Trading Platform",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently &quot;npm run start:react&quot; &quot;wait-on http://localhost:3000 && electron .&quot;",
    "start:react": "react-scripts start",
    "build": "react-scripts build",
    "build:electron": "electron-builder",
    "build:all": "npm run build && npm run build:electron",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.tigerex.desktop",
    "productName": "TigerEx",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Finance"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "electron-store": "^8.1.0",
    "axios": "^1.6.2",
    "socket.io-client": "^4.5.4",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "lightweight-charts": "^4.1.0",
    "@mui/material": "^5.14.18",
    "@mui/icons-material": "^5.14.18",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "recharts": "^2.10.3",
    "date-fns": "^2.30.0",
    "qrcode.react": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "react-scripts": "5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}