# TigerEx Environment Configuration

# Application
NODE_ENV=production
PORT=3000

# API Gateway
NEXT_PUBLIC_API_URL=http://localhost:8000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-password
MONGODB_URI=mongodb://admin:change-this-password@mongodb:27017/tigerex?authSource=admin

# Redis
REDIS_URL=redis://redis:6379

# PostgreSQL
POSTGRES_USER=tigerex
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=tigerex_analytics

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
FANTOM_RPC_URL=https://rpc.ftm.tools/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
TRON_RPC_URL=https://api.trongrid.io

# DEX Protocol Addresses (Ethereum Mainnet)
UNISWAP_V2_ROUTER=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
UNISWAP_V3_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564
SUSHISWAP_ROUTER=0xd9e1cE17f2641f24aE83637ab66a2cca9C378B9F

# API Keys
COINGECKO_API_KEY=your_coingecko_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/tigerex.log

# Session
SESSION_SECRET=your-session-secret-change-this

# CORS
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Feature Flags
ENABLE_P2P_TRADING=true
ENABLE_DEX_MODE=true
ENABLE_STAKING=true
ENABLE_LENDING=true
ENABLE_NFT_MARKETPLACE=true

# Admin
ADMIN_EMAIL=admin@tigerex.com
ADMIN_PASSWORD=change-this-admin-password

# Maintenance Mode
MAINTENANCE_MODE=false
