# TigerEx Hex Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://tigerex:your_password@localhost:5432/tigerex_hex
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# Hex Trading Engine Configuration
HEX_API_HOST=0.0.0.0
HEX_API_PORT=8000

# DEX Integration Configuration
DEX_API_HOST=0.0.0.0
DEX_API_PORT=8001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_DEX_API_URL=http://localhost:8001
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Blockchain RPC URLs
ETH_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# DEX Protocol Configuration
UNISWAP_ROUTER_V3=0xE592427A0AEce92De3Edee1F18E0157C05861564
PANCAKESWAP_ROUTER=0x10ED43C718714eb63d5aA57B78B54704E256024E
SUSHISWAP_ROUTER=0xd9e1cE17f2641f24aE83637ab66a2cca9C378B9F

# CEX API Configuration
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET_KEY=your_coinbase_secret_key

# Cross-Chain Bridge Configuration
BRIDGE_VALIDATORS=3
BRIDGE_CONFIRMATION_BLOCKS=12
BRIDGE_FEE_RATE=0.001

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Admin Configuration
ADMIN_EMAIL=admin@tigerex.com
ADMIN_PASSWORD=admin_secure_password
ADMIN_SECRET=admin_secret_key

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_PER_MINUTE=1000
TRADING_RATE_LIMIT_PER_MINUTE=10000

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=grafana_password

# Message Queue Configuration
RABBITMQ_PASSWORD=rabbitmq_password
CELERY_BROKER_URL=pyamqp://tigerex:rabbitmq_password@rabbitmq:5672//

# Development Configuration
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warn

# Feature Flags
ENABLE_HEX_TRADING=true
ENABLE_DEX_MODE=true
ENABLE_CROSS_CHAIN=true
ENABLE_STAKING=true
ENABLE_YIELD_FARMING=true